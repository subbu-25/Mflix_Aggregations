[
  // Stage 1: Perform a $lookup to join with the comments collection
  {
    $lookup: {
      from: "comments",        
      localField: "_id",        
      foreignField: "movie_id", 
      as: "comments"           
    }
  },
  
  {
    $project: {
      _id: 0,                 
      title: 1,                 
      comments: {               
        name: 1,
        email: 1,
        text: 1,
        date: 1
      }
    }
  }
]
